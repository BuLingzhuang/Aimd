<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="WelcomeTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="view_horizontal_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="anim_popup_window">
        <item name="android:windowEnterAnimation">@animator/popup_window_in</item>
        <item name="android:windowExitAnimation">@animator/popup_window_out</item>
    </style>

    <style name="popupWindow_sh_anim_style">
        <item name="android:windowEnterAnimation">@animator/pop_show_anim</item>
        <item name="android:windowExitAnimation">@animator/pop_hidden_anim</item>
    </style>
</resources>
